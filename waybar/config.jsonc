{
       "layer": "top",
       "position": "top",
       "reload_style_on_change": true,
       "modules-left": ["pulseaudio", "custom/pacman"],
       "modules-center": ["hyprland/workspaces"],
       "modules-right": ["clock", "custom/exit"],

       "pulseaudio": {
			"format": "{icon} {volume}%",
			"format-bluetooth": "{icon} Û∞Ç∞ {volume}%",
			"format-muted": "Óª® ",
			"format-icons": {
				"default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ®  "],
				"ignored-sinks": [
					"Easy Effects Sink"
				],
			},
			"scroll-step": 2.0,
			"smooth-scrolling-threshold": 1,
			"on-click": "pavucontrol -t 3",
		},

        "custom/exit": {
        	"format":"‚èª",
        	"on-click" : "wlogout",
        },
        	
       "hyprland/workspaces": {
           "format": "{icon}",
           "format-icons": {
               "active": "ÔÑë",
               "default": "ÔÑë",
               "empty": "ÔÑë"
           },
           "persistent-workspaces": {
               "HDMI-A-1": [ 1,2,3],
               "DP-2": [ 4,5,6]
           }
       },

       "clock": {
           "format": "{:%H:%M:%S} ",
           "interval": 1,   
           "tooltip-format": "<tt>{calendar}</tt>",
           "calendar": {
               "format": {
                   "today": "<span color='#fAfBfC'><b>{}</b></span>"
               }
           },
           "actions": {
               "on-click-right": "shift_down",
               "on-click": "shift_up"
           }
       },
       
       "network": {
           "format-wifi": "Ôá´",
           "format-ethernet":"Óºâ",
           "format-disconnected": "Ó¨Å",
           "tooltip-format-disconnected": "Error",
           "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
           "tooltip-format-ethernet": "{ifname} üñß ",
           "on-click": "kitty nmtui"
       },

       "custom/pacman": {
           "format": "Û∞Ö¢  {}",
           "interval": 30,   
